@model Repozytorium.Models.Bledy

@{
    ViewBag.Tytul = "Zglaszanie błędu";
    ViewBag.Opis = "Podstrona do zgłoszania błędu";
    ViewBag.SlowaKluczowe = "Zgłoszenie, błąd";
}

<h2>Zgłoś błąd! Naprawimy go</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Błędy</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.TrescBledu, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model=>model.TrescBledu, htmlAttributes: new{@class = "form-control", @style = "min-height:300px; min-width:500px;"} )
                @Html.ValidationMessageFor(model => model.TrescBledu, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Wyślij zgłoszenie" class="btn btn-success" />
            </div>
        </div>
    </div>
}


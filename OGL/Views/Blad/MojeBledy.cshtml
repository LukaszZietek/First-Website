@model IEnumerable<Repozytorium.Models.Bledy>

@{
    ViewBag.Tytul = "Zgłoszone błędy";
    ViewBag.Opis = "Lista zgłoszonych błędów";
    ViewBag.SlowaKluczowe = "Lista, błędy, moje";
}

<h2>Zgłoszone błędy</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrescBledu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataDodania)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            Aby odczytać treść wejdź w szczegóły.
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataDodania)
        </td>
        <td>
            @Html.ActionLink("Szczegóły", "Szczegoly", new { id=item.Id }, new {@class = "btn btn-info"})
        </td>
    </tr>
}

</table>
